{
  "cSpell.words": ["bumpp", "gymrat", "nestjs"],

  "postman.settings.dotenv-detection-notification-visibility": false,
  // ðŸ“Œ Forzar Prettier como formateador por defecto
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // ðŸ“Œ Asegurar que VSCode use Prettier correctamente
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ðŸ“Œ Sincronizar ESLint con Prettier (para evitar conflictos)
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.fixAll": "always"
  },

  // ðŸ“Œ Forzar uso de LF en Windows y Linux
  "files.eol": "\n",

  // ðŸ“Œ Evitar problemas de rutas en Windows/Linux
  "eslint.validate": ["javascript", "typescript", "typescriptreact", "json"],
  "eslint.workingDirectories": [{ "mode": "auto" }],

  // ðŸ“Œ Mejor compatibilidad de ESLint en Windows
  "eslint.nodePath": "node_modules/eslint",

  // ðŸ“Œ Opcional: Mostrar errores de ESLint en tiempo real
  "editor.diagnostic.enable": true
}
